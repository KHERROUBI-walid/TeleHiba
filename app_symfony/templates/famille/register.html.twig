{% extends 'base.html.twig' %}

{% block title %}Inscription Famille{% endblock %}

{% block body %}
    <h1 class="text-2xl font-semibold mb-4">Compléter le profil Famille</h1>

    <div class="mb-6 p-4 bg-yellow-100 border border-yellow-400 text-yellow-800 rounded">
        <strong>Merci de compléter votre profil</strong> pour pouvoir utiliser la plateforme.
    </div>

    {{ form_start(familleForm) }}
        {{ form_row(familleForm.nombreMembres) }}
        {{ form_row(familleForm.revenuMensuel) }}

        <button class="btn btn-primary">Valider</button>
    {{ form_end(familleForm) }}
{% endblock %}
