{% extends 'base.html.twig' %}

{% block title %}Inscription Famille{% endblock %}

{% block body %}
<div class="bg-[#F4F5FF] min-h-screen flex flex-col items-center px-4 py-8">

  <div class="bg-white rounded-2xl shadow-md p-6 w-full max-w-md">

    <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-800 rounded-md text-center font-semibold">
      Votre compte a été créé avec succès !
      <br>
      Merci de compléter les informations de votre famille.
    </div>

    <h1 class="text-2xl font-semibold text-center text-[#3B3D4A] mb-6">
      Compléter le profil Famille
    </h1>

    {{ form_start(familleForm) }}

      <div class="space-y-5">
        {{ form_row(familleForm.nombreMembres, {
          'attr': {'class': 'mt-1 w-full px-4 py-3 rounded-xl bg-[#F4F5FF] text-sm focus:ring-2 focus:ring-[#8C85FF] focus:outline-none'}
        }) }}

        {{ form_row(familleForm.revenuMensuel, {
          'attr': {'class': 'mt-1 w-full px-4 py-3 rounded-xl bg-[#F4F5FF] text-sm focus:ring-2 focus:ring-[#8C85FF] focus:outline-none'}
        }) }}
      </div>

      <button type="submit"
        class="mt-8 w-full bg-[#673DE6] hover:bg-[#8C85FF] text-white font-semibold py-3 rounded-xl shadow-md transition duration-300">
        Valider
      </button>

    {{ form_end(familleForm) }}

  </div>

</div>
{% endblock %}
