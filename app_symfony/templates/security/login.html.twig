{% extends 'base.html.twig' %}

{% block title %}Connexion | TeleHiba{% endblock %}

{% block body %}
<div class="bg-gray-100 flex items-center justify-center min-h-screen px-4">
  <div class="bg-white rounded-xl shadow-lg p-6 max-w-sm w-full">
    <!-- Logo + Titre -->
    <div class="flex flex-col items-center mb-6">
      <div class="bg-[#673DE6] p-4 rounded-xl">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                   2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81
                   4.5 2.09C13.09 3.81 14.76 3 16.5 3
                   19.58 3 22 5.42 22 8.5c0 3.78-3.4
                   6.86-8.55 11.54L12 21.35z"/>
        </svg>
      </div>
      <h1 class="text-xl font-semibold mt-4 text-[#3B3D4A]">TeleHiba</h1>
      <p class="text-sm text-gray-500">Connectons-nous pour aider</p>
    </div>

    {% if error %}
      <div class="text-red-600 text-sm text-center mb-4">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    {% if app.user %}
      <div class="text-sm text-center text-green-600 mb-4">
        Vous êtes connecté en tant que {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}" class="underline text-purple-600">Se déconnecter</a>
      </div>
    {% endif %}

    <!-- Formulaire -->
    <form method="post" class="space-y-4">
      <div>
        <label for="username" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" id="username" name="_username" value="{{ last_username }}"
          placeholder="votre@email.com" required autofocus
          class="mt-1 w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8C85FF] bg-[#F4F5FF]" />
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
        <div class="relative">
          <input type="password" id="password" name="_password" required
            class="mt-1 w-full px-4 py-2 border rounded-lg pr-10 focus:outline-none focus:ring-2 focus:ring-[#8C85FF] bg-[#F4F5FF]" />
          <div class="absolute inset-y-0 right-3 flex items-center text-gray-400">
            👁️
          </div>
        </div>
        <a href="#" class="text-sm text-[#673DE6] hover:underline mt-1 inline-block">Mot de passe oublié ?</a>
      </div>

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button type="submit"
        class="w-full bg-[#673DE6] hover:bg-[#8C85FF] text-white py-2 rounded-lg font-semibold">
        Se connecter
      </button>
    </form>

    <!-- ou continuer avec -->
    <div class="my-4 text-center text-gray-500 text-sm">ou continuer avec</div>
    <div class="flex justify-center space-x-4">
      <button class="border px-4 py-2 rounded-lg flex items-center">
        <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" class="h-5 w-5" />
      </button>
      <button class="border px-4 py-2 rounded-lg flex items-center">
        <img src="https://www.svgrepo.com/show/157818/facebook.svg" alt="Facebook" class="h-5 w-5" />
      </button>
    </div>

    <!-- S'inscrire -->
    <p class="mt-4 text-center text-sm">
      Pas encore de compte ?
      <a href="{{ path('app_register') }}" class="text-[#673DE6] font-semibold hover:underline">S'inscrire</a>
    </p>
  </div>
</div>
{% endblock %}
